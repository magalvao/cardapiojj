<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                android:background="#F3F3F3"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="52dp" android:layout_height="52dp"
               android:layout_marginTop="18dp"
               android:layout_marginStart="18dp"
               android:src="@drawable/box_plus" android:id="@+id/imageView2"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o nÃºmero do pedido para ser adicionado na lista." android:textSize="14sp"
        android:layout_marginTop="9dp" android:layout_below="@+id/textView4"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true" android:layout_alignStart="@+id/textView4"/>
    <TextView
        android:id="@+id/textView4"
        style="@style/TextAppearance.SFBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Adicionar Pedido"
        android:textColor="#3a3a3a" android:textSize="18sp"
        android:layout_alignTop="@+id/imageView2" android:layout_toEndOf="@+id/imageView2"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:inputType="number"
        android:textColor="#3a3a3a"
        android:maxLength="10"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:hint="Ex: 1234567"
        android:numeric="integer"

        android:background="@drawable/input_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView3" android:layout_alignStart="@+id/textView3"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:id="@+id/separator"
          android:layout_alignParentStart="true" android:layout_below="@+id/input"
          android:layout_marginTop="20dp" android:background="#BBBBBB"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="54dp"
                  android:layout_below="@id/separator"
    android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:gravity="center"
                  android:textColor="@color/red"
                  android:textSize="18sp"
                  android:background="?selectableItemBackground"
                  android:clickable="true"
                  android:id="@+id/cancel"
        android:text="Cancelar" android:layout_weight="1" />

        <View android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#BBBBBB" />

        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textColor="@color/red"
                  style="@style/TextAppearance.SFBold"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:background="?selectableItemBackground"
                  android:clickable="true"
                  android:id="@+id/ok"
                  android:text="OK" />
    </LinearLayout>

</RelativeLayout>