<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_trash"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:srcCompat="@drawable/trash_icon" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.3"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:id="@+id/image_status"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/number"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/check_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/number_of_item"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/image_status"
        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/number_label"
        android:layout_alignBottom="@+id/number_label" android:layout_toEndOf="@+id/number_label"
        app:layout_constraintStart_toEndOf="@+id/number_label"
        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/number"
        android:text="@string/available_for_retrieve"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/image_status"
        android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/number_label"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textLabel"
        android:background="@color/black"
        android:alpha="0.1"
        android:layout_marginBottom="8dp" tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLabel" android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>